<p id="notice"><%= notice %></p>

<h1>Writers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Pincode</th>
      <th>Isactive</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @writers.each do |writer| %>
      <tr>
        <td><%= writer.name %></td>
        <td><%= writer.address %></td>
        <td><%= writer.country['name'] %></td>
        <td><%= writer.state['name'] %></td>
        <td><%= writer.city['name'] %></td>
        <td><%= writer.pincode %></td>
        <td><%= writer.isActive %></td>
        <td><%= link_to 'Show', writer %></td>
        <td><%= link_to 'Edit', edit_writer_path(writer) %></td>
        <td><%= link_to 'Destroy', writer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

