<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>About</th>
      <th>Category</th>
      <th>Publication date</th>
      <th>Writers</th>
      <th>Publishers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.about %></td>
        <td><%= book.category['name'] %></td>
        <td><%= book.publication_date %></td>
        <td><%= @writers_name_to_show.join(', ') %></td>
        <td><%= Publication.find(book.publications_id).name %></td>
        <!--<td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

